{{ define "cocktails" }}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="{{ .Site.Author }}">
    <meta name="description" content="{{ .Site.Description }}">

    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="The Wobbly Paw" />
    <meta property="og:title" content="The Wobbly Paw" />
    <meta property="og:url" content="https://jcomo.me/cocktails" />
    <meta property="og:image" content="https://jcomo.me/static/images/wobbly-paw-share.jpg" />

    <title>
      {{ if .Page }}
        {{ .Page.Title }}
      {{ else }}
        {{ .Site.Title }}
      {{ end }}
    </title>

    <!-- Google Analytics -->
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-52140647-1', 'auto');
      ga('send', 'pageview');
    </script>

    <link href='{{ static "css/cocktails.css" }}' rel="stylesheet">
    <link href='{{ static "css/grids-units-min.css" }}' rel="stylesheet">
    <link href='{{ static "css/grids-responsive-min.css" }}' rel="stylesheet">
  </head>

  <body>
    <div class="pure-g">
      <div class="pure-u-1">
        <div class="site-title">
          <div class="site-logo">
            <img src='{{ static "images/wobbly-paw.jpg" }}' />
          </div>
          <a href="/cocktails">
            The Wobbly Paw
          </a>
        </div>
      </div>
      <div class="pure-u-1">
        <div class="cocktail-section">
          <h2>Seasonal</h2>

          <div class="cocktail">
            <div class="cocktail-image">
              <img src='{{ static "images/cocktails/spritz.png" }}' />
            </div>
            <div class="cocktail-name">
              Turkey Trot
            </div>
            <div class="cocktail-ingredients">
              Prosecco, Crème de cassis
            </div>
          </div>

          <div class="cocktail">
            <div class="cocktail-image">
              <img src='{{ static "images/cocktails/martini.png" }}' />
            </div>
            <div class="cocktail-name">
              Mom&apos;s Cranberries
            </div>
            <div class="cocktail-ingredients">
              Cointreau, Vermouth, Cranberry Juice, Vodka
            </div>
          </div>

          <div class="cocktail">
            <div class="cocktail-image">
              <img src='{{ static "images/cocktails/manhattan.png" }}' />
            </div>
            <div class="cocktail-name">
              Fall in Manhattan
            </div>
            <div class="cocktail-ingredients">
              Rye, Vermouth, Maple syrup
            </div>
          </div>
        </div>

        <div class="cocktail-section">
          <h2>Classics</h2>

          <div class="cocktail">
            <div class="cocktail-image">
              <img src='{{ static "images/cocktails/tumbler.png" }}' />
            </div>
            <div class="cocktail-name">
              The Favorite
            </div>
            <div class="cocktail-ingredients">
              Bourbon, Campari, Vermouth
            </div>
          </div>

          <div class="cocktail">
            <div class="cocktail-image">
              <img src='{{ static "images/cocktails/tumbler.png" }}' />
            </div>
            <div class="cocktail-name">
              The Newcomer
            </div>
            <div class="cocktail-ingredients">
              Rye, Maraschino, Punt é Mes
            </div>
          </div>

          <div class="cocktail">
            <div class="cocktail-image">
              <img src='{{ static "images/cocktails/margarita.png" }}' />
            </div>
            <div class="cocktail-name">
              Tommy&apos;s Recipe
            </div>
            <div class="cocktail-ingredients">
              Tequila, Lime, Cointreau
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer>
      <p>
        &copy; {{ .Site.Time | date "2006" }} The Wobbly Paw
      </p>
    </footer>
  </body>
</html>

{{ end }}
